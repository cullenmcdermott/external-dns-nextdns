# NextDNS Configuration (REQUIRED)
NEXTDNS_API_KEY=your-api-key-here
NEXTDNS_PROFILE_ID=your-profile-id-here

# Server Configuration
SERVER_PORT=8888
HEALTH_PORT=8080

# Behavior Configuration
DRY_RUN=false
ALLOW_OVERWRITE=false
LOG_LEVEL=info

# Domain Filtering (comma-separated, optional)
DOMAIN_FILTER=

# Advanced Configuration
SUPPORTED_RECORDS=A,AAAA,CNAME
DEFAULT_TTL=300
NEXTDNS_BASE_URL=https://api.nextdns.io
